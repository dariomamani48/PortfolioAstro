---
// Definición de las tecnologías conocidas
// Definición de las tecnologías conocidas, con nombres corregidos
const technologies = [
  'HTML', 'CSS', 'JavaScript', 'Angular', 'React',
  'MySQL', 'SQL Server', 'C', 'C#', 'Java',
  '.NET', 'Agile', 'Scrum', 'Jira', 'Trello',
  'Figma', 'Adobe Illustrator', 'Adobe Photoshop', 'Astro'
];
---

<section class="tech-carousel-section">
  <div class="tech-carousel">
    <!-- Duplicamos el listado para lograr un scroll continuo -->
    <div class="tech-track">
      {technologies.concat(technologies).map((tech) => (
        <div class="tech-item">{tech}</div>
      ))}
    </div>
  </div>
</section>

<style>
  /* Importamos la fuente moderna Poppins para mantener la coherencia */
  @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;700&display=swap');

  /* Sección general con fondo gris y overflow oculto para el efecto marquee */
  .tech-carousel-section {
    position: relative;
    overflow: hidden;
    background: #f2f2f2;
    padding: 3rem 1rem;
    font-family: 'Poppins', sans-serif;
  }

  /* Contenedor del carrusel */
  .tech-carousel {
    overflow: hidden;
    white-space: nowrap;
    position: relative;
  }

  /* Contenedor interno que se desplaza con la animación */
  .tech-track {
    display: inline-flex;
    align-items: center;
    animation: scroll 30s linear infinite;
  }

  /* Cada tarjeta de tecnología */
  .tech-item {
    padding: 0.75rem 1.5rem;
    margin-right: 2rem;
    background: #fff;
    border: 2px solid #ddd;
    border-radius: 50px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    color: #555;
    text-transform: uppercase;
    font-weight: 700;
    letter-spacing: 0.05em;
    transition: transform 0.3s ease, background-color 0.3s ease;
  }

  .tech-item:hover {
    transform: scale(1.1);
    background-color: #ff6b6b;
    color: #fff;
  }

  /* Keyframes para el scroll continuo */
  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  /* Overlays para generar el efecto de fade in/out en los extremos */
  .tech-carousel-section::before,
  .tech-carousel-section::after {
    content: "";
    position: absolute;
    top: 0;
    width: 100px;
    height: 100%;
    z-index: 2;
  }

  .tech-carousel-section::before {
    left: 0;
    background: linear-gradient(to right, #f2f2f2, transparent);
  }

  .tech-carousel-section::after {
    right: 0;
    background: linear-gradient(to left, #f2f2f2, transparent);
  }

  /* Responsividad: Reducir márgenes y fuentes en pantallas más pequeñas */
  @media (max-width: 768px) {
    .tech-item {
      margin-right: 1rem;
      padding: 0.5rem 1rem;
      font-size: 0.9rem;
    }
  }
</style>

